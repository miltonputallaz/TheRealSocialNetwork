<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="defaultActivityBackground">@color/lightBackColor</item>
        <item name="defaultTextAndIconsColor">@color/colorTextIcons</item>
        <item name="buttonStyle">@style/SocialMediaButtons</item>
    </style>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="defaultActivityBackground">@color/lightBackColorLight</item>
        <item name="defaultTextAndIconsColor">@color/colorTextIconsLight</item>
        <item name="buttonStyle">@style/SocialMediaButtons</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme.NoBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="LightTheme.NoBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <style name="SocialMediaButtons" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/defaultTextAndIconsColor</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/default_horizontal_button_padding</item>
        <item name="android:paddingRight">@dimen/default_horizontal_button_padding</item>
    </style>

    <style name="CustomToolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/defaultTextAndIconsColor</item>
        <item name="android:textColorSecondary">?attr/defaultTextAndIconsColor</item>
    </style>


</resources>
