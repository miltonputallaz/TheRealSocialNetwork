<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_horizontal_margin"
    android:paddingTop="@dimen/default_vertical_margin"
    android:paddingRight="@dimen/default_horizontal_margin"
    android:paddingBottom="@dimen/default_vertical_margin">


    <Button
        android:id="@+id/take_photo_button"
        android:layout_width="@dimen/add_post_dialog_button_ratio"
        android:layout_height="@dimen/add_post_dialog_button_ratio"
        android:theme="@style/SocialMediaButtons"
        android:drawableTop="@drawable/ic_camera"
        android:padding="@dimen/default_horizontal_button_padding"
        android:text="@string/addpost_dialog_take_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/select_image_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_image_button"
        android:layout_width="@dimen/add_post_dialog_button_ratio"
        android:minHeight="@dimen/add_post_dialog_button_ratio"
        android:theme="@style/SocialMediaButtons"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_photo_gallery"
        android:text="@string/addpost_dialog_open_gallery"
        android:padding="@dimen/default_horizontal_button_padding"
        app:layout_constraintLeft_toRightOf="@id/take_photo_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>